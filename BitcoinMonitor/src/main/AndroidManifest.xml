<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pl.d30.bitcoin"
          android:versionCode="13"
          android:versionName="1.1.13" >

    <uses-sdk
            android:minSdkVersion="17"
            android:targetSdkVersion="17" />

    <!-- 
    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="false" />
    -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >

        <!-- live wallpaper - ->
        <service android:name="pl.d30.bitcoin.BitcoinService"
            android:enabled="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER" >
            
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper_info" />
            
        </service>

        <activity android:name="pl.d30.bitcoin.BitcoinConf"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo" />
        
        <!- - DashClock extension -->
        <service android:name=".BitcoinDashService"
                 android:icon="@drawable/icon_small"
                 android:label="Bitcoin Exchange Rate"
                 android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA">

            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension" />
            </intent-filter>

            <meta-data android:name="protocolVersion" android:value="1" />
            <meta-data android:name="description" android:value="See current exchange rate in selected currency." />
            <meta-data android:name="settingsActivity" android:value=".BitcoinDashConf" />
        </service>

        <activity android:name=".BitcoinDashConf"
                  android:label="Bitcoin Extension Settings"
                  android:exported="true" />

    </application>

</manifest>